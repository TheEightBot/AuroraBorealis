<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:auroraLoading="clr-namespace:Aurora.Loading;assembly=Aurora"
    x:Class="AuroraBorealis.NofriendoLoading">
    <ContentPage.Content>
        <Grid BackgroundColor="Black" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="75" />
            </Grid.RowDefinitions>
            
            <auroraLoading:Nofriendo x:Name="nofriendo" 
                                     Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" 
                                     HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                                     StepCount="12" 
                                     LoadingStartColor="SkyBlue" LoadingEndColor="DeepSkyBlue" />
            
            <Label Grid.Row="0" Grid.Column="0" Text="Loading..." 
                   FontSize="20" FontAttributes="Italic" TextColor="White" 
                   Margin="64" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center"/>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>
